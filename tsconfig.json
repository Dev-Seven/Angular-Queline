{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "strict": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@app-models": ["src/app/model/index"],
      "@app-enums": ["src/app/enum/index"],
      "@app-core": ["src/app/core/index"],
      "@app-shared": ["src/app/shared/index"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
